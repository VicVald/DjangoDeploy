# =============================================================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# =============================================================================
DB_NAME=myproject
DB_USER=myprojectuser
DB_PASSWORD=password
DB_HOST=db
DB_PORT=5432

# =============================================================================
# CONFIGURAÇÕES DO RABBITMQ (Broker do Celery)
# =============================================================================
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=sua_senha_rabbitmq_segura

# =============================================================================
# CONFIGURAÇÕES DO DJANGO
# =============================================================================
# IMPORTANTE: Gere uma SECRET_KEY segura para produção!
# Você pode usar: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=coloque_aqui_uma_secret_key_super_segura_de_pelo_menos_50_caracteres

# DEBUG: Sempre False em produção
DEBUG=False

# ALLOWED_HOSTS: Liste todos os domínios permitidos (separados por vírgula)
ALLOWED_HOSTS=*

# CSRF_TRUSTED_ORIGINS: Para produção com HTTPS
CSRF_TRUSTED_ORIGINS=*

# =============================================================================
# CONFIGURAÇÕES DO NGINX
# =============================================================================
NGINX_PORT=80
NGINX_SSL_PORT=443